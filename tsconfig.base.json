{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "rootDir": ".",
    "declarationMap": true,
    "emitDecoratorMetadata": false,
    "esModuleInterop": true,
    "moduleResolution": "node10",
    "experimentalDecorators": false,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "pretty": true,
    "skipDefaultLibCheck": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": false,
    "target": "es2022",
    "verbatimModuleSyntax": false,
    "paths": {
      "@api/*": ["apps/api/src/*"],
      "@libshary/prisma": ["libs/prisma/src/index.ts"],
      "@libshary/shared-types": ["libs/shared-types/src/index.ts"],
      "@web/*": ["apps/web/src/*"],
      "api-e2e/*": ["apps/api-e2e/src/*"],
      "web-e2e/*": ["apps/web-e2e/src/*"],
      "@booksearch/*": ["apps/booksearch/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp", "coverage"]
}
