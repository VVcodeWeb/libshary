{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "target": "es2021",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "composite": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "../../libs/grpc/src/**/*.ts"],
  "exclude": [
    "jest-config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/__mocks__/**/*"
  ]
}
